<% layout('layouts/boilerplate-forms') -%>

<div class="text-center mt-3">
  <form class="register-form" action="/register" method="POST" enctype="multipart/form-data">
    <img class="mb-4" src="/images/LOGO 4.png" alt="EF2 Logo" width="120" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Register Here</h1>
    <div class="">
      <label for="username" class="sr-only">Username:</label>
      <input id="username" class="form-control" type="text" name="username" placeholder="Username" value="<%= username %>" required>
    </div>
    <div class="">
      <label for="password" class="sr-only">Password:</label>
      <input id="password" class="form-control" type="password" name="password" placeholder="Password" required>
    </div>
    <div class="">
      <label for="email" class="sr-only">Email:</label>
      <input id="email" class="form-control" type="email" name="email" placeholder="Email" value="<%= email %>" required>
    </div>
    <div class="">
      <label for="image">Profile Image:</label>
      <input id="image" class="form-control" type="file" name="image">
    </div>
    <input class="btn btn-lg btn-outline-primary btn-block mt-2" type="submit">
  </form>
  <p class="mt-5 mb-3 text-muted">&copy; Aimer 2019</p>
</div>
