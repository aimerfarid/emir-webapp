<% layout('layouts/boilerplate-blog') -%>

<div class="ui main text container">
  <div class="ui huge header">My Personal Blogs</div>
  <% include ../partials/paginate-blogs %>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.docs.forEach(function(blog) { %>
        <div class="item">
          <% blog.images.forEach(function(image) { %>
          <div class="image">
            <img src="<%= image.url %>" alt="Blog Image">
          </div>
          <% }) %>
          <div class="content">
            <a class="header" href="/personals/<%= blog._id %>">
              <%= blog.title %>
            </a>
            <div class="meta">
              <span class="cinema"><%= moment(blog.createdAt).fromNow() %></span>
            </div>
            <div class="description">
              <p>
                <%= blog.category %></p>
            </div>
            <div class="extra">
              <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                Read More
                <i class="right chevron icon"></i>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
    </div>
  </div>
  <% include ../partials/paginate-blogs %>
</div>
