<% layout('layouts/boilerplate-workout') -%>

<% var typeOpts = ['Blog', 'Workout'] %>
<% var categoryOpts = ['Push', 'Pull', 'Leg', 'Stretching', 'Warm Up', 'Food', 'Diet', 'Health Tips'] %>
<h1>New Workout Post!</h1>

<div class="container">
  <form action="/workouts" method="POST" enctype="multipart/form-data">
    <div class="form-group row">
      <label for="inputTitleW" class="col-md-1 col-form-label">Title:</label>
      <div class="col-md-7">
        <input class="form-control" id="inputTitleW" type="text" name="workout[title]" placeholder="Title">
      </div>
      <label for="inputTypeW" class="col-md-1 col-form-label">Type:</label>
      <div class="col-md-3">
        <select class="form-control" id="inputTypeW" name="workout[type]" placeholder="Category">
          <% for (var i = 0; i < typeOpts.length; i++) { %>
            <option value="<%=typeOpts[i]%>"><%=typeOpts[i]%></option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputCategoryW" class="col-md-1 col-form-label">Category:</label>
        <div class="col-md-3">
          <select class="form-control" id="inputCategoryW" name="workout[category]" placeholder="Category">
            <% for (var i = 0; i < categoryOpts.length; i++) { %>
              <option value="<%=categoryOpts[i]%>"><%=categoryOpts[i]%></option>
              <% } %>
            </select>
          </div>
          <label for="inputRepsW" class="col-md-1 col-form-label">Reps/Brief Description:</label>
          <div class="col-md-4">
            <input type="text" class="form-control" id="inputRepsW" name="workout[reps]" placeholder="Reps">
          </div>
          <label for="inputSetsW" class="col-md-1 col-form-label">Sets:</label>
          <div class="col-md-2">
            <input type="number" class="form-control" id="inputSetsW" name="workout[sets]" placeholder="Sets">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputImagesW" class="col-md-1 col-form-label">Images:</label>
          <div class="col-md-11">
            <input type="file" id="inputImagesW" accept="images/*" name="images" multiple />
          </div>
        </div>
        <div class="form-group row">
          <label for="inputDescW" class="col-md-1 col-form-label">Description:</label>
          <div class="col-md-11">
            <textarea class="form-control" id="inputDescW" name="workout[description]" rows="12" placeholder="Description"></textarea>
          </div>
        </div>
        <button class="btn btn-secondary btn-block">Submit</button>
      </form>
</div>

<!--
title: String,
reps: Number,
sets: Number,
description: String,
-->
