<% layout('layouts/boilerplate-workout') -%>

<div class="container-fluid pt-2">
  <div class="row content">
    <!-- Sidebar Widgets Column -->
    <div class="col-sm-4 sidenav">
      <h4><%= title %> Index</h4>
      <ul class="nav nav-pills nav-stacked">
        <li class="active mr-2"><a href="/workouts">Workout Index</a></li>
        <li><a href="/workouts/types">Types of Workouts</a></li>
        <!-- <li><a href="#section3">Family</a></li> -->
        <!-- <li><a href="#section3">Photos</a></li> -->
      </ul><br>
      <!-- Search Widget -->
      <div class="card my-4">
        <h5 class="card-header">Search</h5>
        <div class="card-body">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Blog...">
            <span class="input-group-btn">
              <button class="btn btn-secondary" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>

      <!-- Categories Widget -->
      <div class="card my-3">
        <h5 class="card-header">Categories</h5>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#">Food</a>
                </li>
                <li>
                  <a href="#">Diet</a>
                </li>
                <li>
                  <a href="#">Health Tips</a>
                </li>
              </ul>
            </div>
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#">Recipes</a>
                </li>
                <li>
                  <a href="#">Cheat Days</a>
                </li>
                <li>
                  <a href="#">Snacks</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <a class="btn mt-3" href="/workouts">Go Back</a>
    </div>

    <div class="col-sm-8">
      <h4><small><%= title %> Posts</small></h4>
      <hr>
      <% workouts.docs.forEach(function(workout) { %>
        <% if(workout.type === 'Blog') { %>
          <h2><%= workout.title %></h2>
          <small><span class="glyphicon glyphicon-time"></span>Posted: <%= moment(workout.createdAt).fromNow() %>.</small>
          <p><br><strong>Category: <%= workout.category %></strong></p>
          <p><%= workout.reps %></p>
          <div class=""><a href="/workouts/blogs/<%= workout.id %>">Read More...</a></div>
          <br>
          <hr>
        <% }; %>
      <% }); %>
      <br>

    </div>
  </div>
</div>
